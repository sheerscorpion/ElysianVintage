@model ElysianVintage.Models.MailingListingModel

@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@ViewBag.Title.</h2>
    @using (Html.BeginForm("Contact", "Contact", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr><th colspan="2" align="center">Would You Like to sign up for our Montly Mailing Listing?</th></tr>
            <tr>
                <td align="center">Email Address: </td>
                <td>@Html.TextBoxFor(m => m.emailAddress, new { @class = "form-control", placeholder = "Email Address", required = "required"})</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(m => m.mailingList, new { @class = "form-control", required = "required" }) By subscribing, I agree to the Terms and Conditons of the Privacy Policy</td>
            </tr>
            <tr>
                <th colspan="2" align="center"><input type="submit" value="Submit" /></th>
            </tr>
        </table>
    }
    <hr />
        <address>
            Minnetonka, MN 55305<br />
            <abbr title="Phone">P:</abbr>
            (952)-666-9567
        </address>

        <address>
            <strong>Customer Support:</strong>   <a href="mailto:ElysianVintageMN@gmail.com">Email Us</a><br />
        </address>
    </body>